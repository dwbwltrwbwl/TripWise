<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Вместе В Путь - Совместное планирование путешествий</title>

    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon">
    <link rel="manifest" href="/site.webmanifest">
    <meta name="msapplication-TileColor" content="#ffffff">
    <meta name="theme-color" content="#ffffff">

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TripWise.styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@800&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Baloo+2:wght@800&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom py-2">
            <div class="container-fluid">
                <div class="d-flex align-items-center w-100">
                    <a class="navbar-brand d-flex align-items-center me-4" href="/">
                        <img src="/favicon-32x32.png" width="35" height="35" class="d-inline-block align-top me-2" alt="Логотип">
                        Вместе В Путь
                    </a>
                    <div class="navbar-integrated-tabs">
                        <div class="nav-tabs-wrapper">
                            <ul class="nav-tabs">
                                <li class="nav-tab" data-tab="flights">
                                    <a asp-controller="Home" asp-action="Flights">
                                        <div class="tab-icon">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" viewBox="0 0 24 24">
                                                <path d="M7.37 14.593 5 14l-2 2 3.5 1.5L8 21l2-2-.593-2.37 2.947-2.679 4.147 7.05a1.777 1.777 0 0 0 1.176-2.048l-1.746-8.385 2.202-2.202a7.05 7.05 0 0 0 1.84-3.259.89.89 0 0 0-1.08-1.08 7.04 7.04 0 0 0-3.26 1.84L13.43 8.069 5.049 6.322A1.78 1.78 0 0 0 2.999 7.5l7.05 4.146z"></path>
                                            </svg>
                                        </div>
                                        <div class="tab-text">Авиабилеты</div>
                                    </a>
                                </li>
                                <li class="nav-tab" data-tab="railway">
                                    <a asp-controller="Home" asp-action="Railway">
                                        <div class="tab-icon">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" viewBox="0 0 24 24">
                                                <path d="M4 15.5C4 17.43 5.57 19 7.5 19L6 20.5v.5h2l2-2-2-2H6v1.5L7.5 18c-.827 0-1.5-.673-1.5-1.5S6.673 15 7.5 15H18v2H7.5C5.57 17 4 15.43 4 13.5S5.57 10 7.5 10h3.293l-1.5-1.5H7.5C6.673 8.5 6 7.827 6 7s.673-1.5 1.5-1.5h2.793l-1.5-1.5H7.5C5.57 4 4 5.57 4 7.5S5.57 11 7.5 11h3.293l-1.5 1.5H7.5C5.57 12.5 4 14.07 4 16zm16-7v5h-4v-5h4M16 9h-2v1h2V9zm0 2h-2v1h2v-1zm3.5-7C20.43 4 22 5.57 22 7.5S20.43 11 18.5 11H18v-.5c0-.827-.673-1.5-1.5-1.5S15 9.673 15 10.5v3c0 .827.673 1.5 1.5 1.5h3c.827 0 1.5-.673 1.5-1.5v-5c0-.827-.673-1.5-1.5-1.5h-2.793l1.5-1.5H18.5z" />
                                            </svg>
                                        </div>
                                        <div class="tab-text">ЖД билеты</div>
                                    </a>
                                </li>
                                <li class="nav-tab" data-tab="hotels">
                                    <a asp-controller="Home" asp-action="Hotels">
                                        <div class="tab-icon">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" viewBox="0 0 24 24">
                                                <path d="M21 5H3v6h3.5v-1a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v1h3v-1a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v1H21zM4 13a3 3 0 0 0-3 3v3h2l1-2h16l1 2h2v-3a3 3 0 0 0-3-3z"></path>
                                            </svg>
                                        </div>
                                        <div class="tab-text">Отели</div>
                                    </a>
                                </li>

                                <!-- Вкладки только для авторизованных пользователей -->
                                @if (Context.Session.GetInt32("UserId") != null)
                                {
                                    <li class="nav-tab" data-tab="trips">
                                        <a asp-controller="Home" asp-action="Trips">
                                            <div class="tab-icon">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" viewBox="0 0 24 24">
                                                    <path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5a2.5 2.5 0 0 1 0-5 2.5 2.5 0 0 1 0 5z" />
                                                </svg>
                                            </div>
                                            <div class="tab-text">Мои поездки</div>
                                        </a>
                                    </li>
                                    <li class="nav-tab" data-tab="groups">
                                        <a asp-controller="Home" asp-action="Groups">
                                            <div class="tab-icon">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" viewBox="0 0 24 24">
                                                    <path d="M16 4c0-1.11.89-2 2-2s2 .89 2 2-.89 2-2 2-2-.89-2-2zm4 18v-6h2.5l-2.54-7.63A2.01 2.01 0 0 0 18.06 7h-.12a2 2 0 0 0-1.9 1.37l-.86 2.58c1.08.6 1.82 1.73 1.82 3.05v8h3zm-8 0v-6H9v-2c0-1.1.9-2 2-2h2c1.1 0 2 .9 2 2v2h-2v6h-3z" />
                                                </svg>
                                            </div>
                                            <div class="tab-text">Группы</div>
                                        </a>
                                    </li>
                                    <li class="nav-tab" data-tab="budget">
                                        <a asp-controller="Home" asp-action="Budget">
                                            <div class="tab-icon">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" viewBox="0 0 24 24">
                                                    <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1.41 16.09V20h-2.67v-1.93c-1.71-.36-3.16-1.46-3.27-3.4h1.96c.1 1.05.82 1.87 2.65 1.87 1.96 0 2.4-.98 2.4-1.59 0-.83-.44-1.61-2.67-2.14-2.48-.6-4.18-1.62-4.18-3.67 0-1.72 1.39-2.84 3.11-3.21V4h2.67v1.95c1.86.45 2.79 1.86 2.85 3.39H14.3c-.05-1.11-.64-1.87-2.22-1.87-1.5 0-2.4.68-2.4 1.64 0 .84.65 1.39 2.67 1.91 2.56.62 4.18 1.54 4.18 3.67 0 1.9-1.51 3-3.23 3.33z" />
                                                </svg>
                                            </div>
                                            <div class="tab-text">Бюджет</div>
                                        </a>
                                    </li>
                                    <li class="nav-tab" data-tab="activities">
                                        <a asp-controller="Home" asp-action="Activities">
                                            <div class="tab-icon">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" viewBox="0 0 24 24">
                                                    <path d="M14.4 6L14 4H5v17h2v-7h5.6l.4 2h7V6z" />
                                                </svg>
                                            </div>
                                            <div class="tab-text">Активности</div>
                                        </a>
                                    </li>
                                }

                                <li class="nav-tab" data-tab="favorites">
                                    <a asp-controller="Home" asp-action="Favorites">
                                        <div class="tab-icon">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" viewBox="0 0 24 24">
                                                <path d="M4.383 5.42A4.9 4.9 0 0 0 3 8.92L3 8.999c0 3.6 5.667 9.5 8.5 12h1c2.834-2.5 8.5-8.4 8.5-12v-.08a4.9 4.9 0 0 0-1.382-3.498 4.617 4.617 0 0 0-7.005.398L12 6.614l-.613-.795a4.617 4.617 0 0 0-7.004-.398"></path>
                                            </svg>
                                        </div>
                                        <div class="tab-text">Избранное</div>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent" aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse flex-grow-0" id="navbarContent">
                    <div class="d-flex align-items-center">
                        @if (Context.Session.GetInt32("UserId") != null)
                        {
                            <!-- Пользователь авторизован -->
                            <div class="d-flex align-items-center">
                                <a class="btn btn-outline-secondary me-2" asp-controller="Account" asp-action="Profile">
                                    <i class="fas fa-user me-1"></i>Аккаунт
                                </a>
                                <a class="btn btn-outline-danger" asp-controller="Account" asp-action="Logout">
                                    <i class="fas fa-sign-out-alt me-1"></i>Выйти
                                </a>
                            </div>
                        }
                        else
                        {
                            <!-- Пользователь не авторизован -->
                            <div class="d-flex align-items-center">
                                <a class="btn btn-outline-secondary me-2" asp-controller="Account" asp-action="Login">
                                    <i class="fas fa-sign-in-alt me-1"></i>Войти
                                </a>
                                <a class="btn btn-primary" asp-controller="Account" asp-action="Register">
                                    Регистрация
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-dark text-white py-4">
        <div class="container">
            <div class="row">
                <div class="col-md-4 mb-3">
                    <h5 class="fw-bold">Вместе В Путь</h5>
                    <p class="text-muted">Планируйте путешествия вместе с друзьями и семьей</p>
                </div>
                <div class="col-md-2 mb-3">
                    <h6 class="fw-bold">О сервисе</h6>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-muted text-decoration-none">О нас</a></li>
                        <li><a href="#" class="text-muted text-decoration-none">Контакты</a></li>
                        <li><a href="#" class="text-muted text-decoration-none">Помощь</a></li>
                    </ul>
                </div>
                <div class="col-md-2 mb-3">
                    <h6 class="fw-bold">Направления</h6>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-muted text-decoration-none">Россия</a></li>
                        <li><a href="#" class="text-muted text-decoration-none">Европа</a></li>
                        <li><a href="#" class="text-muted text-decoration-none">Азия</a></li>
                    </ul>
                </div>
                <div class="col-md-4 mb-3">
                    <h6 class="fw-bold">Подпишитесь на рассылку</h6>
                    <div class="input-group">
                        <input type="email" class="form-control" placeholder="Ваш email">
                        <button class="btn btn-primary">Подписаться</button>
                    </div>
                </div>
            </div>
            <hr class="my-4">
            <div class="text-center text-muted">
                <small>© 2025 Вместе В Путь. Все права защищены.</small>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script>
        // Убираем автоматическое выделение первой вкладки
        document.addEventListener('DOMContentLoaded', function() {
            // Определяем активную вкладку на основе текущей страницы
            const currentPath = window.location.pathname;
            const tabs = document.querySelectorAll('.nav-tab');

            // Снимаем активный класс со всех вкладок
            tabs.forEach(tab => tab.classList.remove('active'));

            // Определяем какая вкладка должна быть активной
            if (currentPath.includes('/flights') || currentPath === '/Home/Flights') {
                document.querySelector('[data-tab="flights"]').classList.add('active');
            } else if (currentPath.includes('/railway') || currentPath === '/Home/Railway') {
                document.querySelector('[data-tab="railway"]').classList.add('active');
            } else if (currentPath.includes('/hotels') || currentPath === '/Home/Hotels') {
                document.querySelector('[data-tab="hotels"]').classList.add('active');
            } else if (currentPath.includes('/trips') || currentPath === '/Home/Trips') {
                document.querySelector('[data-tab="trips"]').classList.add('active');
            } else if (currentPath.includes('/groups') || currentPath === '/Home/Groups') {
                document.querySelector('[data-tab="groups"]').classList.add('active');
            } else if (currentPath.includes('/budget') || currentPath === '/Home/Budget') {
                document.querySelector('[data-tab="budget"]').classList.add('active');
            } else if (currentPath.includes('/activities') || currentPath === '/Home/Activities') {
                document.querySelector('[data-tab="activities"]').classList.add('active');
            } else if (currentPath.includes('/favorites') || currentPath === '/Home/Favorites') {
                document.querySelector('[data-tab="favorites"]').classList.add('active');
            }
            // Главная страница - никакая вкладка не активна
        });
    </script>
</body>
</html>