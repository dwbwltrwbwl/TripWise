<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Вместе В Путь</title>

    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon">
    <link rel="manifest" href="/site.webmanifest">

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@800&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <!-- Минимальный хедер только с логотипом -->
    <header class="border-bottom bg-white py-3">
        <div class="container">
            <div class="d-flex justify-content-center">
                <a class="navbar-brand d-flex align-items-center" href="/">
                    <img src="/favicon-32x32.png" width="35" height="35" class="d-inline-block align-top me-2" alt="Логотип">
                    <span style="font-family: 'Nunito', sans-serif; font-weight: 800; background: linear-gradient(90deg, #0379D9, #40B624); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text;">
                        Вместе В Путь
                    </span>
                </a>
            </div>
        </div>
    </header>

    <!-- Основной контент -->
    <main role="main">
        @RenderBody()
    </main>

    <!-- Минимальный футер -->
    <footer class="bg-light py-3 mt-5">
        <div class="container">
            <div class="text-center text-muted">
                <small>© 2025 Вместе В Путь. Все права защищены.</small>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>