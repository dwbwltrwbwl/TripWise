@model IEnumerable<TripWise.Models.VotingSystem>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Question)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExpiresAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdPointNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdTripNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Question)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExpiresAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedBy.IdUser)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdPointNavigation.IdPoint)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdTripNavigation.IdTrip)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdVote">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdVote">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdVote">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
