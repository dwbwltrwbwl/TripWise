@{
    ViewData["Title"] = "Отели";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h1 class="mb-4" style="font-family: 'Nunito', sans-serif; font-weight: 800; font-size: 2.5rem; color: #333; color: #0379D9;">
                Поиск отелей
            </h1>
            <p class="lead" style="font-family: 'Nunito', sans-serif; color: gray;">Найдите идеальное жилье для вашего путешествия</p>

            <!-- Форма поиска отелей -->
            <div class="card shadow-sm border-0" style="margin-top: 0;">
                <div class="card-body p-4">
                    <form>
                        <!-- Первая строка -->
                        <div class="row g-3 align-items-end mb-3">
                            <div class="col-md-6">
                                <label class="form-label fw-medium" style="font-family: 'Nunito', sans-serif;">Направление</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-map-marker-alt"></i></span>
                                    <input type="text"
                                           class="form-control"
                                           placeholder="Город, отель или регион"
                                           style="font-family: 'Nunito', sans-serif;">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-medium" style="font-family: 'Nunito', sans-serif;">Даты проживания</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-calendar"></i></span>
                                    <input type="text"
                                           class="form-control"
                                           placeholder="Заезд - Выезд"
                                           style="font-family: 'Nunito', sans-serif;">
                                </div>
                            </div>
                        </div>

                        <!-- Вторая строка -->
                        <div class="row g-3 align-items-end">
                            <div class="col-md-4">
                                <label class="form-label fw-medium" style="font-family: 'Nunito', sans-serif;">Гости</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-users"></i></span>
                                    <select class="form-select" style="font-family: 'Nunito', sans-serif;">
                                        <option>1 взрослый</option>
                                        <option>2 взрослых</option>
                                        <option>3 взрослых</option>
                                        <option>Семья с детьми</option>
                                        <option>Группа 5+</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-medium" style="font-family: 'Nunito', sans-serif;">Дополнительно</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-bed"></i></span>
                                    <select class="form-select" style="font-family: 'Nunito', sans-serif;">
                                        <option>Любой тип номера</option>
                                        <option>Стандартный номер</option>
                                        <option>Люкс</option>
                                        <option>Сьюит</option>
                                        <option>Семейный номер</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <button type="submit" class="btn btn-primary btn-lg w-100 text-center" style="font-family: 'Nunito', sans-serif; height: 46px;">
                                    <i class="fas fa-search me-2"></i>Найти
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
