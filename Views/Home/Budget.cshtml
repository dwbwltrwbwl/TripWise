@{
    ViewData["Title"] = "Бюджет";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h1 class="mb-4" style="font-family: 'Nunito', sans-serif; font-weight: 800; font-size: 2.5rem; color: #333; color: #0379D9;">
                Бюджет путешествия
            </h1>
            <p class="lead">Планируйте и отслеживайте расходы для ваших поездок</p>

            @if (Context.Session.GetInt32("UserId") == null)
            {
                <div class="alert alert-info">
                    <h5>Войдите в аккаунт</h5>
                    <p>Чтобы планировать бюджет путешествий, войдите в свой аккаунт.</p>
                    <a asp-controller="Account" asp-action="Login" class="btn btn-primary">Войти</a>
                    <a asp-controller="Account" asp-action="Register" class="btn btn-outline-primary">Зарегистрироваться</a>
                </div>
            }
            else
            {
                <div class="row">
                    <div class="col-md-8">
                        <!-- Общая статистика -->
                        <div class="row mb-4">
                            <div class="col-md-4">
                                <div class="card text-center">
                                    <div class="card-body">
                                        <h3 class="text-success">25 000 ₽</h3>
                                        <p class="text-muted mb-0">Общий бюджет</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="card text-center">
                                    <div class="card-body">
                                        <h3 class="text-warning">12 500 ₽</h3>
                                        <p class="text-muted mb-0">Потрачено</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="card text-center">
                                    <div class="card-body">
                                        <h3 class="text-primary">12 500 ₽</h3>
                                        <p class="text-muted mb-0">Осталось</p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Категории расходов -->
                        <div class="card mb-4">
                            <div class="card-header d-flex justify-content-between align-items-center">
                                <h5 class="mb-0">Категории расходов</h5>
                                <button class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#addCategoryModal">
                                    <i class="fas fa-plus me-1"></i>Добавить
                                </button>
                            </div>
                            <div class="card-body">
                                <div class="category-item mb-3">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <h6 class="mb-1">Транспорт</h6>
                                            <div class="progress" style="height: 8px;">
                                                <div class="progress-bar bg-success" style="width: 65%"></div>
                                            </div>
                                        </div>
                                        <div class="text-end">
                                            <div class="fw-bold">8 125 ₽ / 12 500 ₽</div>
                                            <small class="text-muted">Осталось: 4 375 ₽</small>
                                        </div>
                                    </div>
                                </div>
                                <div class="category-item mb-3">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <h6 class="mb-1">Проживание</h6>
                                            <div class="progress" style="height: 8px;">
                                                <div class="progress-bar bg-warning" style="width: 40%"></div>
                                            </div>
                                        </div>
                                        <div class="text-end">
                                            <div class="fw-bold">4 000 ₽ / 10 000 ₽</div>
                                            <small class="text-muted">Осталось: 6 000 ₽</small>
                                        </div>
                                    </div>
                                </div>
                                <div class="category-item">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <h6 class="mb-1">Питание</h6>
                                            <div class="progress" style="height: 8px;">
                                                <div class="progress-bar bg-info" style="width: 25%"></div>
                                            </div>
                                        </div>
                                        <div class="text-end">
                                            <div class="fw-bold">375 ₽ / 1 500 ₽</div>
                                            <small class="text-muted">Осталось: 1 125 ₽</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- История расходов -->
                        <div class="card">
                            <div class="card-header">
                                <h5 class="mb-0">История расходов</h5>
                            </div>
                            <div class="card-body">
                                <div class="expense-item d-flex justify-content-between align-items-center py-2 border-bottom">
                                    <div>
                                        <h6 class="mb-1">Авиабилеты Москва-Сочи</h6>
                                        <small class="text-muted">Транспорт • 15 июл</small>
                                    </div>
                                    <div class="text-end">
                                        <div class="fw-bold text-danger">-7 500 ₽</div>
                                        <small class="text-muted">2 пассажира</small>
                                    </div>
                                </div>
                                <div class="expense-item d-flex justify-content-between align-items-center py-2 border-bottom">
                                    <div>
                                        <h6 class="mb-1">Отель на 7 ночей</h6>
                                        <small class="text-muted">Проживание • 15 июл</small>
                                    </div>
                                    <div class="text-end">
                                        <div class="fw-bold text-danger">-4 000 ₽</div>
                                        <small class="text-muted">Предоплата</small>
                                    </div>
                                </div>
                                <div class="expense-item d-flex justify-content-between align-items-center py-2">
                                    <div>
                                        <h6 class="mb-1">Ужин в ресторане</h6>
                                        <small class="text-muted">Питание • 16 июл</small>
                                    </div>
                                    <div class="text-end">
                                        <div class="fw-bold text-danger">-375 ₽</div>
                                        <small class="text-muted">2 человека</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <!-- Быстрое добавление расхода -->
                        <div class="card mb-4">
                            <div class="card-body">
                                <h5 class="card-title">Добавить расход</h5>
                                <form id="addExpenseForm">
                                    <div class="mb-3">
                                        <label class="form-label">Сумма</label>
                                        <input type="number" class="form-control" placeholder="0 ₽" required>
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label">Категория</label>
                                        <select class="form-select" required>
                                            <option value="">Выберите категорию</option>
                                            <option value="transport">Транспорт</option>
                                            <option value="accommodation">Проживание</option>
                                            <option value="food">Питание</option>
                                            <option value="entertainment">Развлечения</option>
                                            <option value="shopping">Шоппинг</option>
                                        </select>
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label">Описание</label>
                                        <input type="text" class="form-control" placeholder="На что потратили?">
                                    </div>
                                    <button type="submit" class="btn btn-primary w-100">Добавить расход</button>
                                </form>
                            </div>
                        </div>

                        <!-- Советы по экономии -->
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">Советы по экономии</h5>
                                <ul class="list-unstyled">
                                    <li class="mb-2">
                                        <i class="fas fa-lightbulb text-warning me-2"></i>
                                        <small>Бронируйте билеты заранее</small>
                                    </li>
                                    <li class="mb-2">
                                        <i class="fas fa-lightbulb text-warning me-2"></i>
                                        <small>Ищите жилье не в центре</small>
                                    </li>
                                    <li class="mb-2">
                                        <i class="fas fa-lightbulb text-warning me-2"></i>
                                        <small>Питайтесь в местных кафе</small>
                                    </li>
                                    <li>
                                        <i class="fas fa-lightbulb text-warning me-2"></i>
                                        <small>Используйте общественный транспорт</small>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<!-- Модальное окно добавления категории -->
<div class="modal fade" id="addCategoryModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Добавить категорию</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="mb-3">
                        <label class="form-label">Название категории</label>
                        <input type="text" class="form-control" placeholder="Например: Экскурсии" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Бюджет</label>
                        <input type="number" class="form-control" placeholder="0 ₽" required>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Отмена</button>
                <button type="button" class="btn btn-primary">Добавить</button>
            </div>
        </div>
    </div>
</div>

<style>
    .category-item {
        padding: 15px;
        border-radius: 8px;
        background: #f8f9fa;
    }

    .expense-item:hover {
        background-color: #f8f9fa;
    }

    .progress {
        background-color: #e9ecef;
    }
</style>