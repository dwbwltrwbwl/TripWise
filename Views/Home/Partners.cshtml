@{
    ViewData["Title"] = "Партнеры";
    Layout = "~/Views/Shared/_LegalLayout.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white">
                    <h1 class="h3 mb-0" style="font-family: 'Nunito', sans-serif;">
                        <i class="fas fa-handshake me-2"></i>Наши партнеры
                    </h1>
                </div>
                <div class="card-body p-4">
                    <div class="mb-4">
                        <p class="lead">Мы сотрудничаем с ведущими компаниями в сфере туризма и транспорта, чтобы предложить вам лучший сервис.</p>
                    </div>

                    <!-- Авиакомпании -->
                    <section class="mb-5">
                        <h3 style="font-family: 'Nunito', sans-serif; color: #0379D9;">
                            <i class="fas fa-plane me-2"></i>Авиакомпании
                        </h3>
                        <div class="row mt-3">
                            <div class="col-md-4 mb-3">
                                <div class="partner-card p-3 border rounded text-center">
                                    <i class="fas fa-plane fa-3x text-primary mb-2"></i>
                                    <h5>Аэрофлот</h5>
                                    <p class="text-muted small">Национальный авиаперевозчик</p>
                                </div>
                            </div>
                            <div class="col-md-4 mb-3">
                                <div class="partner-card p-3 border rounded text-center">
                                    <i class="fas fa-plane fa-3x text-success mb-2"></i>
                                    <h5>S7 Airlines</h5>
                                    <p class="text-muted small">Одна из крупнейших авиакомпаний</p>
                                </div>
                            </div>
                            <div class="col-md-4 mb-3">
                                <div class="partner-card p-3 border rounded text-center">
                                    <i class="fas fa-plane fa-3x text-warning mb-2"></i>
                                    <h5>Победа</h5>
                                    <p class="text-muted small">Бюджетные перевозки</p>
                                </div>
                            </div>
                        </div>
                    </section>

                    <!-- Железные дороги -->
                    <section class="mb-5">
                        <h3 style="font-family: 'Nunito', sans-serif; color: #0379D9;">
                            <i class="fas fa-train me-2"></i>Железные дороги
                        </h3>
                        <div class="row mt-3">
                            <div class="col-md-6 mb-3">
                                <div class="partner-card p-3 border rounded text-center">
                                    <i class="fas fa-train fa-3x text-danger mb-2"></i>
                                    <h5>РЖД</h5>
                                    <p class="text-muted small">Российские железные дороги</p>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <div class="partner-card p-3 border rounded text-center">
                                    <i class="fas fa-train fa-3x text-info mb-2"></i>
                                    <h5>Аэроэкспресс</h5>
                                    <p class="text-muted small">Скоростные поезда в аэропорты</p>
                                </div>
                            </div>
                        </div>
                    </section>

                    <!-- Отели -->
                    <section class="mb-5">
                        <h3 style="font-family: 'Nunito', sans-serif; color: #0379D9;">
                            <i class="fas fa-hotel me-2"></i>Отели и проживание
                        </h3>
                        <div class="row mt-3">
                            <div class="col-md-3 mb-3">
                                <div class="partner-card p-3 border rounded text-center">
                                    <i class="fas fa-hotel fa-2x text-warning mb-2"></i>
                                    <h6>Azimut</h6>
                                </div>
                            </div>
                            <div class="col-md-3 mb-3">
                                <div class="partner-card p-3 border rounded text-center">
                                    <i class="fas fa-hotel fa-2x text-warning mb-2"></i>
                                    <h6>Hilton</h6>
                                </div>
                            </div>
                            <div class="col-md-3 mb-3">
                                <div class="partner-card p-3 border rounded text-center">
                                    <i class="fas fa-hotel fa-2x text-warning mb-2"></i>
                                    <h6>Marriott</h6>
                                </div>
                            </div>
                            <div class="col-md-3 mb-3">
                                <div class="partner-card p-3 border rounded text-center">
                                    <i class="fas fa-hotel fa-2x text-warning mb-2"></i>
                                    <h6>Ibis</h6>
                                </div>
                            </div>
                        </div>
                    </section>

                    <!-- Статистика -->
                    <section class="mb-4">
                        <h3 style="font-family: 'Nunito', sans-serif; color: #0379D9;">Статистика сотрудничества</h3>
                        <div class="row text-center mt-3">
                            <div class="col-md-3">
                                <div class="stat-card p-3">
                                    <div class="stat-number text-primary fw-bold fs-2">50+</div>
                                    <div class="stat-label text-muted">Партнеров</div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="stat-card p-3">
                                    <div class="stat-number text-success fw-bold fs-2">1000+</div>
                                    <div class="stat-label text-muted">Направлений</div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="stat-card p-3">
                                    <div class="stat-number text-warning fw-bold fs-2">24/7</div>
                                    <div class="stat-label text-muted">Поддержка</div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="stat-card p-3">
                                    <div class="stat-number text-info fw-bold fs-2">99%</div>
                                    <div class="stat-label text-muted">Успешных бронирований</div>
                                </div>
                            </div>
                        </div>
                    </section>

                    <!-- Стать партнером -->
                    <section>
                        <div class="alert alert-info">
                            <h5><i class="fas fa-briefcase me-2"></i>Хотите стать нашим партнером?</h5>
                            <p class="mb-2">Мы открыты для сотрудничества с туристическими компаниями, перевозчиками и сервисами.</p>
                            <a href="mailto:partners@vmestevput.ru" class="btn btn-primary btn-sm">
                                <i class="fas fa-envelope me-1"></i>Написать нам
                            </a>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .partner-card {
        transition: all 0.3s ease;
        background: #f8f9fa;
    }

        .partner-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            background: white;
        }

    .stat-card {
        background: #f8f9fa;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

        .stat-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }
</style>
