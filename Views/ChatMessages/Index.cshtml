@model IEnumerable<TripWise.Models.ChatMessage>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Message)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SentAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdPointNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdTripNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdUserNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Message)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SentAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdPointNavigation.IdPoint)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdTripNavigation.IdTrip)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdUserNavigation.IdUser)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdMessage">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdMessage">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdMessage">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
